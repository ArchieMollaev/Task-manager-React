{
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "import/no-unresolved": ["error", { "ignore": ["^react$"] }],
    "react/destructuring-assignment": [false],
    "import/no-extraneous-dependencies": [false]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
